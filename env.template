# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database
# For development (SQLite - leave empty)
# DATABASE_URL=

# For production (PostgreSQL - Render will provide this automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Geolocation API Configuration
GEO_BACKEND=django_ip_geolocation.backends.IPGeolocationAPI
GEO_IP_BACKEND_API_KEY=your-geolocation-api-key
GEO_IP_BACKEND_USERNAME=your-geolocation-username
GEO_RESPONSE_HEADER=X-IP-Geolocation

# IPInfo Configuration (optional)
IPINFO_TOKEN=your-ipinfo-token

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379/0
